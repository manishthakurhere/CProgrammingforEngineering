<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BitwiseOperators"
    android:background="#6495ed">

    <TextView
        android:id="@+id/textView32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#b0e0e6"
        android:text="In the C programming language, operations can be performed on a bit level using bitwise operators."
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="26dp" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:background="#b0e0e6"
        android:text="C provides six operators for bit manipulation.\n
Symbol	Operator\n
&amp; &#160; &#160; &#160; bitwise AND\n
|&#160; &#160; &#160;bitwise inclusive OR\n
^&#160; &#160; &#160;bitwise XOR (exclusive OR)\n
&lt;&lt; &#160; &#160; &#160;left shift\n
&gt;&gt; &#160; &#160; &#160;right shift\n
~&#160; &#160; &#160;bitwise NOT (one's complement) (unary)"
        android:textColor="#000000"
        android:textSize="19sp"
        app:layout_constraintTop_toBottomOf="@+id/textView32"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textView33"
        app:srcCompat="@drawable/bo"
        tools:layout_editor_absoluteX="141dp" />
</androidx.constraintlayout.widget.ConstraintLayout>